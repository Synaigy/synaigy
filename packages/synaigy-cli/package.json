  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.9",
    "@types/prompts": "^2.4.9",
    "eslint": "^9",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
